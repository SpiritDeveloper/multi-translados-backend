pipeline {
    agent any

    stages {
        stage("verify tooling") {
            steps {
                sh '''
                whoami
                cd /var/www/backend/multi-translados-backend
                docker version
                docker info
                docker-compose version 
                curl --version
                '''
            }
        }
        stage('Start') {
            steps {
                echo 'Pull all changes ...'
                sh '''
                    cd /var/www/backend/multi-translados-backend
                    git config --global --add safe.directory /var/www/backend/multi-translados-backend
                    git checkout -f master
                    git pull origin master
                    '''
                echo 'Docker prune ...'
            }
        }
        stage('Preparing everything...') {
            steps {
                echo 'Build to new changes'
                sh '''
                    cd /var/www/backend/multi-translados-backend
                    docker-compose up -d --no-color --wait
                    docker-compose ps
                    '''
            }
        }
        stage('Push to project') {
            steps {
                echo 'Push a new changes'
                sh '''
                    cd /var/www/backend/multi-translados-backend
                    docker-compose push
                    docker-compose ps
                    '''
            }
        }
        stage('Publish') {
            steps {
                echo 'Deploying....'
                echo 'Sucess ...'
            }
        }
        stage('Testing') {
            steps {
                sh 'curl http://ec2-18-116-35-115.us-east-2.compute.amazonaws.com/api/'
            }
        }
    }
    post {
        always {
        sh '''
            cd /var/www/backend/multi-translados-backend
            docker-compose ps
            '''
        }
    }
}